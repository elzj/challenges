<div class="card" style="margin: 1em 0; padding: 0.5em;">
  <h4>Prompt from <%= prompt.user_login %></h4>
  <div><%= prompt.body %></div>
  <p><%= prompt.tags.map(&:name).join(', ') %></p>
  <ul style="margin: 0; padding: 0">
    <li style="display:inline">
      <%= "#{prompt.works_count} fills" %>
    </li>
    <li style="display:inline">
      <%= link_to 'Fill', "/works/new?prompt_id=#{prompt.id}" %>
    </li>
  </ul>
</div>
