<h1><%= @collection.name %></h1>
<h2><%= "created by #{@collection.user.login}" %></h2>

<div><%= @collection.description %></div>

<p><%= @collection.tags.map(&:name).join(', ') %></p>

<% if @collection.user == current_user %>
  <ul>
    <li>
      <%= link_to 'Edit',
            edit_collection_path(@collection) %>
    </li>
    <li>
      <%= link_to 'Add a Challenge',
            new_challenge_path(collection_id: @collection.id) %>
    </li>
  </ul>
<% end %>

<% @collection.challenges.each do |challenge| %>
  <%= render 'challenges/blurb', challenge: challenge %>
<% end %>