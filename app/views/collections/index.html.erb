<h1>Collections</h1>

<% @collections.each do |collection| %>
  <div class="card collection" style="margin: 1em 0; padding: 0.5em">
    <h3><%= link_to collection.name, collection %></h3>
    <p><%= collection.description %></p>
    <% if collection.tags.present? %>
      <p>Tags: <%= collection.tags.pluck(:name).join(', ') %></p>
    <% end %>
    <% if @active_challenges[collection.id] %>
      <p>
        Active challenges:
        <%= @active_challenges[collection.id].map { |challenge|
             link_to(challenge.name, challenge) }.join(', ').html_safe %>
      </p>
    <% end %>
  </div>
<% end %>
